{
  "compilerOptions": {
    "outDir": "lib",
    "target": "es6",
    "lib": ["dom", "esnext"],
    "allowJs": true,
    "jsx": "react",
    "skipLibCheck": true,
    "declaration": true,
    "declarationDir": "lib",
    "module": "CommonJS",
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,
    "removeComments": true
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "node_modules",
    "lib"
  ]
}
